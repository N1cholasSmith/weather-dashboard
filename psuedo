// -------------------- Display current time in vp ----------------------------
var currentMoment = document.querySelector("#display-time");
​
function currentTime() {
    var time = moment().format("hh:mm:ss");
    currentMoment.textContent = time
};
​
currentTime();
setInterval(function(){
    currentTime();
},1000);
