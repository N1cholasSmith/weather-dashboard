// -------------------- Get Weather API ----------------------------
function fetchWeather(event) {
    console.log("clicked");
    event.preventDefault();
    console.log(cityName.value);
    fiveDayForecast = fetch(`https://api.openweathermap.org/data/2.5/forecast?q=${cityName.value}&appid=${apiKey}&units=metric`)
    .then(response => response.json())
    .then((data)=>{
        console.log(data);
        weatherData(data);
        // fiveDayForecast(data)
    })
​
};
